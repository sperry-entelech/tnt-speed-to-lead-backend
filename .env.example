# TNT Corporate Lead System - Environment Configuration
# Copy this file to .env and configure with your actual values

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tnt_lead_system
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_SSL=false

# For Railway/Azure PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@host:port/database

# =====================================================
# REDIS CONFIGURATION (for queues and caching)
# =====================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# For Railway/Azure Redis (production)
# REDIS_URL=redis://user:password@host:port

# =====================================================
# SERVER CONFIGURATION
# =====================================================
NODE_ENV=development
PORT=3001
API_VERSION=v2
JWT_SECRET=your_super_secure_jwt_secret_change_this
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_change_this
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# =====================================================
# EMAIL CONFIGURATION (richweb.net SMTP)
# =====================================================
SMTP_HOST=mail.richweb.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@tntlimousine.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@tntlimousine.com
FROM_NAME=TNT Limousine

# =====================================================
# TNT BUSINESS CONFIGURATION
# =====================================================
TNT_BUSINESS_EMAIL=admin@tntlimousine.com
TNT_MANAGER_PHONE=+1-804-555-0100
TNT_BASE_LOCATION=Richmond, VA
TNT_SERVICE_RADIUS_MILES=100
TNT_RESPONSE_TIME_TARGET_MINUTES=5

# =====================================================
# EXTERNAL INTEGRATIONS
# =====================================================

# Zoho CRM Integration
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REDIRECT_URI=https://api.tntleads.com/webhooks/zoho-callback
ZOHO_ACCESS_TOKEN=your_zoho_access_token
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_API_DOMAIN=https://www.zohoapis.com

# FastTrack InVision Integration
FASTTRACK_API_URL=https://api.fasttrack.com/v1
FASTTRACK_API_KEY=your_fasttrack_api_key
FASTTRACK_COMPANY_ID=your_fasttrack_company_id

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#tnt-leads

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1-804-555-0100

# =====================================================
# MONITORING & LOGGING
# =====================================================
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info

# =====================================================
# RATE LIMITING & SECURITY
# =====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# =====================================================
# WEBHOOK SECURITY
# =====================================================
WEBHOOK_SECRET=your_webhook_signature_secret
WEBSITE_FORM_SECRET=your_website_form_validation_secret

# =====================================================
# DEVELOPMENT SETTINGS
# =====================================================
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000
ENABLE_SWAGGER_DOCS=true
ENABLE_DEBUG_LOGS=true